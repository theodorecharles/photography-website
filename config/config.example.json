{
  "development": {
    "frontend": {
      "port": 3000,
      "apiUrl": "http://localhost:3001"
    },
    "backend": {
      "port": 3001,
      "photosDir": "photos",
      "allowedOrigins": ["http://localhost:5173", "http://localhost:3000"]
    },
    "security": {
      "allowedHosts": ["localhost:3000", "localhost:5173"],
      "rateLimitWindowMs": 1000,
      "rateLimitMaxRequests": 50
    }
  },
  "production": {
    "frontend": {
      "port": 3000,
      "apiUrl": "https://api.yourdomain.com"
    },
    "backend": {
      "port": 3001,
      "photosDir": "photos",
      "allowedOrigins": ["https://yourdomain.com", "https://www.yourdomain.com"]
    },
    "security": {
      "allowedHosts": ["yourdomain.com", "www.yourdomain.com"],
      "rateLimitWindowMs": 1000,
      "rateLimitMaxRequests": 50,
      "redirectFrom": ["olddomain.com", "www.olddomain.com"],
      "redirectTo": "yourdomain.com"
    }
  },
  "branding": {
    "siteName": "Your Name",
    "avatarPath": "/photos/avatar.png"
  },
  "analytics": {
    "scriptPath": "",
    "_comment_script": "scriptPath should be a URL to an external analytics script (e.g., Google Analytics, Plausible, etc.)",
    "openobserve": {
      "enabled": false,
      "endpoint": "https://log.yourdomain.com/api/default/website/_json",
      "username": "your-username",
      "password": "your-password",
      "_comment": "OpenObserve endpoint and credentials for custom event tracking. The backend proxies requests to keep credentials secure. Set enabled to true to activate."
    },
    "hmacSecret": "generate-a-random-secret-here-use-openssl-rand-hex-32",
    "_comment_hmac": "HMAC secret for signing analytics events. Generate with: openssl rand -hex 32. This prevents tampering with events."
  },
  "externalLinks": [
    {
      "title": "My Blog",
      "url": "https://blog.example.com"
    },
    {
      "title": "Primes Benchmark",
      "url": "/primes/"
    },
    {
      "title": "YouTube",
      "url": "https://youtube.com/@yourname"
    },
    {
      "title": "GitHub",
      "url": "https://github.com/yourusername/photography-website"
    }
  ]
}
